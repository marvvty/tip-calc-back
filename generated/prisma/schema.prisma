generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id           Int            @id @default(autoincrement())
  base_amount  Decimal        @db.Decimal(10, 2)
  tip_precent  Int?
  people_count Int
  created_at   DateTime?      @default(now()) @db.Timestamp(6)
  updated_at   DateTime?      @default(now()) @db.Timestamp(6)
  participants participants[]
}

model participants {
  id               Int      @id @default(autoincrement())
  account_id       Int
  name             String?
  custom_precent   Int?
  custom_amount    Decimal? @db.Decimal(10, 2)
  calculated_share Decimal? @default(0) @db.Decimal(10, 2)
  accounts         accounts @relation(fields: [account_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_account")
}
